<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
        
<hibernate-mapping schema="bianchengbang_jdbc">
    <!-- name:类的全路径:-->
    <!-- table:表的名称:(可以省略的.使用类的名称作为表名.)-->
    
    <class name="userSystem.model.User" table="user"> 

        <id name="userId" column="user_id"> 
            <generator class="native"/> 
        </id> 

        <property name="account" column="account"/> 

        <property name="password" column="password"/>
        
        <property name="name" column="name"/> 
        
        <property name="email" column="email"/> 
        
        <property name="sex" column="sex"/> 
        
        <property name="birthday" column="birthday"/> 
        
        <property name="lastModifiedDate" column="last_modified_date"/>
        
        <property name="createdDate" column="created_date"/>  

    </class> 
</hibernate-mapping>

<!-- 配置參考 http://c.biancheng.net/hibernate/xxx-hbm-xml.html -->